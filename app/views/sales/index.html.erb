<div class='row'>
  <div class='col-md-12'>
    <div class='page-header'>
      <h3><%= t('.title') %></h3>
    </div><!-- /.page-header -->

    <%= form_for :search, url: sales_path, method: :get, html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <div class='col-md-11'>
          <%= search_field_tag :by_query, params[:by_query], placeholder: t('placeholders.search_sales_by'), class: 'form-control' %>
        </div>
        <div class='col-md-1'>
          <%= f.submit t('actions.search'), class: 'btn' %>
        </div>
      </div><!-- /.form-group -->
    <% end %>

    <table class='table table-hover'>
      <thread>
        <tr>
          <th><%= Sale.human_attribute_name(:seller) %></th>
          <th><%= Sale.human_attribute_name(:purchaser) %></th>
          <th><%= Sale.human_attribute_name(:vehicle) %></th>
          <th><%= Sale.human_attribute_name(:sale_date) %></th>
          <th colspan='2'></th>
        </tr>
      </thread>
      <tbody>
        <%= content_tag_for :tr, @sales do |sale| %>
          <td><%= sale.seller %></td>
          <td><%= sale.purchaser %></td>
          <td><%= sale.vehicle %></td>
          <td><%= l sale.purchase_date %></td>
          <td><%= link_to t(:show, scope: 'actions'), sale_path(sale) %></td>
        <% end %>
      </tbody>
    </table>
  </div><!-- /.col-md-12 -->
</div><!-- /.row -->
