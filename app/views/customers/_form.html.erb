<div class='row'>
  <div class='col-lg-12'>
    <%= simple_form_for @customer do |f| %>
      <%= f.error_notification %>

      <%= render partial: 'form_fields', locals: { form: f } %>

      <div class='form-actions'>
        <%= f.button :submit %>
      </div>
    <% end %>
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
