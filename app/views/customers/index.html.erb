<h1><%= t('.title') %></h1>

<table class='table table-hover'>
  <thread>
    <tr>
      <th><%= Customer.human_attribute_name(:full_name) %></th>
      <th><%= Customer.human_attribute_name(:cpf) %></th>
      <th></th>
    </tr>
  </thread>
  <tbody>
    <%= content_tag_for :tr, @customers do |customer| %>
      <td><%= customer.full_name %></td>
      <td><%= customer.cpf %></td>
      <td><%= link_to t(:edit, scope: 'actions'), edit_customer_path(customer) %></td>
    <% end %>
  </tbody>
</table>
