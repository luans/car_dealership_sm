<div class='row'>
  <div class='col-md-12'>
    <div class='page-header'>
      <h3><%= t('.title') %></h3>
    </div><!-- /.page-header -->

    <%= form_for :search, url: customers_path, method: :get, html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <div class='col-md-11'>
          <%= search_field_tag :by_query, params[:by_query], placeholder: t('placeholders.search_customers_by'), class: 'form-control' %>
        </div>
        <div class='col-md-1'>
          <%= f.submit t('actions.search'), class: 'btn' %>
        </div>
      </div><!-- /.form-group -->
    <% end %>

    <table class='table table-hover'>
      <thread>
        <tr>
          <th><%= Customer.human_attribute_name(:full_name) %></th>
          <th><%= Customer.human_attribute_name(:cpf) %></th>
          <th colspan='2'></th>
        </tr>
      </thread>
      <tbody>
        <%= content_tag_for :tr, @customers do |customer| %>
          <td><%= customer.full_name %></td>
          <td><%= customer.cpf %></td>
          <td><%= link_to t(:show, scope: 'actions'), customer_path(customer) %></td>
          <td><%= link_to t(:edit, scope: 'actions'), edit_customer_path(customer) %></td>
        <% end %>
      </tbody>
    </table>
  </div><!-- /.col-md-12 -->
</div><!-- /.row -->
