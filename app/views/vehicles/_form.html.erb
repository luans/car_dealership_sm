<div class='row'>
  <div class='col-lg-12'>
    <%= simple_form_for @vehicle do |f| %>
      <%= f.error_notification %>

      <div class='form-inputs'>
        <%= f.input :brand %>
        <%= f.input :version %>
        <%= f.input :maker_year %>
        <%= f.input :model_year %>
        <%= f.input :license_plate %>
        <%= f.input :city %>
        <%= f.input :uf %>
        <%= f.input :color %>
        <%= f.input :fuel %>
        <%= f.input :renavam %>
        <%= f.input :chassi %>
        <%= f.input :owner %>
        <%= f.input :old_license_plate %>
      </div>

      <div class='form-actions'>
        <%= f.button :submit %>
      </div>
    <% end %>
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
