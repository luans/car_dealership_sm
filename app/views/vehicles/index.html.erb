<div class='row'>
  <div class='col-md-12'>
    <div class='page-header'>
      <h3><%= t('.title') %></h3>
    </div><!-- /.page-header -->

    <%= form_for :search, url: vehicles_path, method: :get, html: {class: 'form-horizontal'} do |f| %>
      <div class='form-group'>
        <div class='col-md-11'>
          <%= text_field_tag :by_query, params[:by_query], placeholder: t('placeholders.search_vehicles_by'), class: 'form-control' %>
        </div>
        <div class='col-md-1'>
          <%= f.submit t('actions.search'), class: 'btn' %>
        </div>
      </div><!-- /.form-group -->
    <% end %>

    <table class='table table-hover'>
      <thread>
        <tr>
          <th><%= Vehicle.human_attribute_name(:brand) %></th>
          <th><%= Vehicle.human_attribute_name(:version) %></th>
          <th><%= Vehicle.human_attribute_name(:model_year) %></th>
          <th colspan='2'></th>
        </tr>
      </thread>
      <tbody>
        <%= content_tag_for :tr, @vehicles do |vehicle| %>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.version %></td>
          <td><%= "#{vehicle.maker_year}/#{vehicle.model_year}" %></td>
          <td><%= link_to t(:show, scope: 'actions'), vehicle_path(vehicle) %></td>
          <td><%= link_to t(:edit, scope: 'actions'), edit_vehicle_path(vehicle) %></td>
        <% end %>
      </tbody>
    </table>
  </div><!-- /.col-md-12 -->
</div><!-- /.row -->
